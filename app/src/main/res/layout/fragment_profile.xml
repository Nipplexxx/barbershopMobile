<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_avatar_placeholder"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Аватар"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Баллы: 0"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ФИО"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Телефон"
            android:inputType="phone"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:id="@+id/scheduleLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить часы работы и услуги"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Spinner для выбора дня недели -->
            <Spinner
                android:id="@+id/dayOfWeekSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Spinner для выбора времени -->
            <Spinner
                android:id="@+id/timeSlotSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Поле для ввода услуг через запятую -->
            <EditText
                android:id="@+id/editServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Услуги через запятую (напр. Стрижка, Бритьё)"
                android:layout_marginTop="8dp" />

            <!-- Новое поле для стоимости услуги -->
            <EditText
                android:id="@+id/editServicePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Стоимость услуги (руб.)"
                android:inputType="numberDecimal"
                android:layout_marginTop="8dp" />

            <!-- Спиннер для выбора процента баллов -->
            <Spinner
                android:id="@+id/pointsPercentSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnAddSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/daysContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="7">

            <CheckBox
                android:id="@+id/checkMonday"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Пн"
                android:gravity="center"/>

            <CheckBox
                android:id="@+id/checkTuesday"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Вт" />

            <CheckBox
                android:id="@+id/checkWednesday"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ср" />

            <CheckBox
                android:id="@+id/checkThursday"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Чт" />

            <CheckBox
                android:id="@+id/checkFriday"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Пт" />

            <CheckBox
                android:id="@+id/checkSaturday"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сб" />

            <CheckBox
                android:id="@+id/checkSunday"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Вс" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>