<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <!-- CardView для улучшенного отображения элемента -->
    <androidx.cardview.widget.CardView
        android:id="@+id/serviceCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:radius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/primary_variant"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Вложенный LinearLayout для внутренних элементов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Название услуги с иконкой слева -->
            <TextView
                android:id="@+id/textServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название услуги"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_barber"
                android:drawablePadding="8dp" />

            <!-- День и время услуги -->
            <TextView
                android:id="@+id/textDayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пн, 14:00"
                android:textColor="@color/text_secondary_light"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Имя барбера -->
            <TextView
                android:id="@+id/textBarberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Барбер: Иван Иванов"
                android:textColor="@color/text_secondary_light"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textStyle="italic"/>

            <!-- Стоимость услуги -->
            <TextView
                android:id="@+id/textServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цена: 1000₽"
                android:textColor="@color/text_primary_light"
                android:textStyle="italic"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <!-- Баллы за услугу -->
            <TextView
                android:id="@+id/textPointsPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Баллы: 5%"
                android:textColor="@color/accent_dark"
                android:textStyle="italic"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Кнопка для удаления услуги -->
            <ImageButton
                android:id="@+id/btnDeleteService"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Удалить услугу"
                android:src="@android:drawable/ic_menu_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
