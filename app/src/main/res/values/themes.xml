<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Светлая тема приложения -->
    <style name="Theme.BarbershopMob" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Основной цвет -->
        <item name="colorPrimary">@color/primary</item>                 <!-- насыщенный синий -->
        <item name="colorPrimaryVariant">@color/primary_variant</item>  <!-- темный синий -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Вторичный цвет -->
        <item name="colorSecondary">@color/secondary</item>             <!-- бирюзовый -->
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Цвет строки состояния -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BarbershopMob.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BarbershopMob.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BarbershopMob.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>